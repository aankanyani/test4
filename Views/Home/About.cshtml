
@model IEnumerable<test4.Models.ViewData>
@{
    ViewBag.Title = "About";
}
<h2>People List</h2>

<div id="DivGrid">
    @{
        var grid = new WebGrid(source: Model);
        @grid.GetHtml(htmlAttributes: new { id = "DataTable" }, columns: grid.Columns(
        grid.Column("id"),
        grid.Column("name"),
        grid.Column("surname"),
        grid.Column("", header: "ToEdit", format: @<text>@Html.ActionLink("Edit Now", "Edit", new { id = item.ID })</text>),
        grid.Column("", header: "ToDelete", format: @<text>@Html.ActionLink("Delete Now", "Delete", new { id = item.ID })</text>)));
}

</div>